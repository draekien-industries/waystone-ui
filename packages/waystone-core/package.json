{
  "name": "@waystone/core",
  "version": "6.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The core functions required by @waystone/components and used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "build:storybook": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "dev:storybook": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@waystone/tsconfig": "*",
    "eslint-preset-waystone": "*"
  },
  "peerDependencies": {
    "@emotion/react": ">=11.8.2",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "theme-ui": ">=0.14.2",
    "type-fest": ">=3.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "theme-ui": "^0.15.1",
    "type-fest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
