{
  "name": "@waystone/ui",
  "version": "8.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The react component library used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf storybook-static && rm -rf coverage",
    "test": "jest --coverage",
    "test:release": "jest --coverage",
    "test:update": "jest --coverage -u",
    "test:watch": "jest --coverage --watch -u"
  },
  "devDependencies": {
    "@waystone/tsconfig": "*",
    "eslint-preset-waystone": "*"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@theme-ui/color": "^0.15.1",
    "@theme-ui/css": "^0.15.1",
    "@waystone/core": "*",
    "@waystone/components": "*",
    "@waystone/theme": "*",
    "@waystone/utils": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "theme-ui": "^0.15.1"
  },
  "peerDependencies": {
    "@emotion/react": ">=11.8.2",
    "@theme-ui/color": ">=0.15.1",
    "@theme-ui/css": ">=0.15.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "theme-ui": ">=0.14.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
