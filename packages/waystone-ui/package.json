{
  "name": "@waystone/ui",
  "version": "9.1.2",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The react component library used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf storybook-static && rm -rf coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.4",
    "@waystone/tsconfig": "workspace:*",
    "eslint-preset-waystone": "workspace:*"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@theme-ui/color": "^0.16.0",
    "@theme-ui/css": "^0.16.0",
    "@waystone/core": "workspace:*",
    "@waystone/components": "workspace:*",
    "@waystone/syntax-highlighter": "workspace:*",
    "@waystone/theme": "workspace:*",
    "@waystone/utils": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "theme-ui": "^0.16.0"
  },
  "peerDependencies": {
    "@emotion/react": "^11.11.1",
    "@theme-ui/color": ">=0.16.0",
    "@theme-ui/css": "^0.16.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "theme-ui": "^0.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
