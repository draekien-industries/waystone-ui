{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "target": "ES6",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "isolatedModules": true
  }
}
