{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "esModuleInterop": true
  }
}
