    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "tsup": "^8.0.2"
  },
  "peerDependencies": {
    "@tanstack/react-virtual": "^3.4.0",
    "@tanstack/react-table": "^8.9.1",
    "@emotion/react": ">=11.1.1",
    "react": ">=18"
