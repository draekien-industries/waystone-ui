{
  "name": "@waystone/components",
  "version": "2.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The react component library used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "build:storybook": "build-storybook",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "dev:storybook": "start-storybook -p 6006",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rimraf -rf .turbo && rimraf -rf node_modules && rimraf -rf dist && rimraf -rf storybook-static && rimraf -rf coverage",
    "test": "jest --coverage",
    "test:release": "jest --coverage",
    "test:update": "jest --coverage -u",
    "test:watch": "jest --coverage --watch -u",
    "storybook:upgrade": "npx sb@latest upgrade -s"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^13.0.0",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@waystone/tsconfig": "*",
    "eslint-preset-waystone": "*",
    "identity-obj-proxy": "^3.0.0",
    "storybook-dark-mode": "^1.1.0"
  },
  "dependencies": {
    "@emotion/react": "*",
    "@theme-ui/color": "*",
    "@theme-ui/css": "*",
    "@waystone/core": "*",
    "@waystone/utils": "*",
    "react": "*",
    "react-dom": "*",
    "theme-ui": "*",
    "type-fest": "*",
    "react-syntax-highlighter": "^15.5.0"
  },
  "peerDependencies": {
    "@emotion/react": ">=11.8.2",
    "@theme-ui/color": ">=0.15.1",
    "@theme-ui/css": ">=0.15.1",
    "@waystone/core": "*",
    "@waystone/utils": "*",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "theme-ui": ">=0.14.2",
    "type-fest": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
