{
  "name": "@waystone/utils",
  "version": "6.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The utils used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "build:storybook": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "dev:storybook": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest --coverage",
    "test:release": "jest --coverage",
    "test:update": "jest --coverage -u",
    "test:watch": "jest --coverage --watch -u"
  },
  "dependencies": {
    "react": "^18.0.0",
    "type-fest": "^3.7.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@waystone/tsconfig": "*",
    "eslint-preset-waystone": "*",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^14.0.4",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
