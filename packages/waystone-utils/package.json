{
  "name": "@waystone/utils",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/draekien-industries/waystone-ui"
  },
  "description": "The utils used by draekien-industries",
  "author": "draekien-industries",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint src --fix",
    "lint:release": "eslint src",
    "clean": "rimraf -rf .turbo && rimraf -rf node_modules && rimraf -rf dist"
  },
  "peerDependencies": {
    "typescript": "*",
    "prettier": "*",
    "ts-jest": "*",
    "jest": "*",
    "react": "*"
  },
  "devDependencies": {
    "@waystone/tsconfig": "*",
    "@waystone/core": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "eslint-preset-waystone": "*",
    "tsup": "*",
    "type-fest": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
