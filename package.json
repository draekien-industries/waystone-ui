{
  "private": true,
  "name": "waystone",
  "version": "0.0.0",
  "packageManager": "yarn@1.22.15",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "turbo": "latest"
  }
}
