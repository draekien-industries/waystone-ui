{
  "private": true,
  "name": "waystone",
  "version": "0.0.0",
  "packageManager": "yarn@1.22.15",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@emotion/react": "^11.8.2",
    "@mdx-js/react": "^2.1.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "theme-ui": "^0.14.0",
    "ts-jest": "^27.1.3",
    "turbo": "latest",
    "webpack": "^5.70.0"
  }
}
