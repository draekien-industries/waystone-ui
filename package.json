{
  "private": true,
  "name": "waystone",
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.10",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --continue",
    "lint": "turbo run lint",
    "lint:release": "turbo run lint:release",
    "test": "turbo run test",
    "test:update": "turbo run test:update",
    "test:watch": "turbo run test:watch",
    "test:release": "turbo run test:release",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "is-ci || husky install",
    "version": "turbo run build lint:release test:release && changeset version",
    "release": "turbo run build lint:release test:release && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^16.18.35",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^6.0.0",
    "chromatic": "^6.10.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,md,json}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dv/tty && npx cz --hook || true"
    }
  }
}
