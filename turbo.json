{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": false,
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:update": {
      "cache": false,
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:release": {
      "cache": false,
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:types": {
      "dependsOn": ["^build"]
    },
    "lint:release": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": ["dist/**", "build/**"]
    },
    "clean": {
      "cache": false
    },
    "storybook:upgrade": {
      "cache": false
    }
  }
}
