{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "build:storybook": {
      "outputs": ["dist/**", ".next/**", "storybook-static/**"],
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:update": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:release": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "lint:release": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    "dev:storybook": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "storybook:upgrade": {
      "cache": false
    }
  }
}
