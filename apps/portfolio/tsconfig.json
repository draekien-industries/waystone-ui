{
  "extends": "@waystone/tsconfig/react-library.json",
  "include": ["."],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "__snapshots__",
    "__assets__",
    "**/*.stories.tsx",
    "**/*.{spec|test|internal}.tsx"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  }
}
